extends layout
block content
  div.row
    div.col-sm-4
      div.page-header
        h1 Add Organization
        form(method='post', action='/organization/add', role='form',enctype='multipart/form-data')
          div.form-group
          label Organization Name:
            input.form-control(type='text', name='name')
            br
            label Activity Categories
            select.btn.btn-primary.dropdown-toggle(name= "activity")
              for activity in activities
                option(value=activity.name, selected="#{activity.name}") #{activity.name}
            br
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Volunteer!
      