extends layout
block content
  div.row
    div.col-sm-4
      div.page-header
        h1 Add Organization
        form(method='post', action='/organization/add', role='form',enctype='multipart/form-data')
          div.form-group
          label Organization Name:
            input.form-control(type='text', name='name')
          label Organization Category:
            input.form-control(type='text', name='category')
            label Activity Categories
              br
              .col-sm-6
                for activity in activities
                  .checkbox
                    label
                      input(name='activity', type='checkbox', value=activity.name)
                      | #{activity.name}
            br
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Add Organization
      