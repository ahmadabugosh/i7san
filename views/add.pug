extends layout

block content
  div.row
    div.col-sm-6
      div.page-header
        h1 Add Contribution
        form(method='post', action='/contribute')
          input(type='hidden', name='_csrf', value=_csrf)
          div.form-group
            label Contribution Name:
            input.form-control(type='text', name='name')
            label Contribution Amount:
            input.form-control(type='text', name='amount')
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Make Contribution
      