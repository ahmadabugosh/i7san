extends layout

block content
  div.row
    div.col-sm-6
      div.page-header
        h1 Add Contribution
        form(method='post', action='/contribute')
          div.form-group
            label Contribution Name:
            input.form-control(type='text', name='name')
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Make Contribution
    