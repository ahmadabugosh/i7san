extends layout

block content
  div.row
    div.col-sm-4
      div.page-header
        h1 Add Project
        form(method='post', action='/add/project', role='form',enctype='multipart/form-data')
          div.form-group
            label Organization Name:
            select.btn.btn-primary.dropdown-toggle(name= "org")
              option(value='Kim', selected=kim) Kim 
              option(value='Christer', selected=christer) Christer
              option(value='Hege', selected=hege) Hege
              option(value='Morten', selected=morten) Morten
              option(value='Andre', selected=andre) Andre
            br
            label Project Name:
            input.form-control(type='text', name='name')
            br
            label Project Image:
            input(type='file', name='myFile')
            br
            br
            label Project Description:
            input.form-control(type='text', name='description')
            br
            label Category:
            .form-inline(id='add1')
              input.form-control(type='radio', name='category', value="Water" id="add2")
              |Water 
              input.form-control(type='radio', name='category', value="Education" id="add2")
              |Education 
              input.form-control(type='radio', name='category', value="Orphans" id="add2")
              |Orphans 
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Add Project
      